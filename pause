# pause.asm - Simple Delay Loop

        .text
        .globl pause

pause:
    # Save return address
    addi $sp, $sp, -4
    sw $ra, 0($sp)

    # A simple delay loop
    li $t0, 500000  # Arbitrary count for delay

delay_loop:
    addi $t0, $t0, -1
    bgtz $t0, delay_loop

    # Restore return address
    lw $ra, 0($sp)
    addi $sp, $sp, 4
    jr $ra
